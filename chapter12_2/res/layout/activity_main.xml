<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chapter12_2.MainActivity" >

    <Button
        android:id="@+id/buttonGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="获取" />

    <TextView
        android:id="@+id/textViewMCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonGet"
        android:layout_below="@+id/buttonGet"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewMNC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewMCC"
        android:layout_below="@+id/textViewMCC"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewLAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewMNC"
        android:layout_below="@+id/textViewMNC"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewCID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textViewLAC"
        android:layout_below="@+id/textViewLAC"
        android:text="TextView" />

</RelativeLayout>
